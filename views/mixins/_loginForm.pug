mixin loginForm()
  .row
    .loginWrapper.col-md-6.col-md-offset-3
      h1.display-4.m-b-2 Log In
      //- Flash here
      if locals.flashes
        pre= h.dump(locals.flashes)
        - const categories = Object.keys(locals.flashes)
            each category in categories
              each message in flashes[category]
                if (category === 'error')
                  .alert(class=`alert-danger`)
                    = message
                else
                  .alert(class=`alert-${category}`)
                    = message
      form(method='POST' action='/login')
        div.form-group
          label(for='username') Username
          input.form-control(type='text' id='username' placeholder='Username' name='username')
        div.form-group
          label(for='password') Password
          input.form-control.form(type='password' id='password' placeholder='Password' name='password')
          br
        button.btn.btn-group.btn-primary(type='submit') Log in  