mixin safetyRequirement()
  .col-lg-6
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        h6.m-0.font-weight-bold.text-primary Safety Requirements
        .dropdown.no-arrow
          a#dropdownMenuLink.dropdown-toggle(href="#safetyRequirement" data-toggle="collapse" role="button" aria-expanded="true")
            i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
      .card-body.collapse#safetyRequirement
        div.form-group.form-row
          .col.col-md-12.col-lg-6
            label.small(for="safetyRequirement_site_sign") Site Sign
            .input-group
              select.form-control(name="safetyRequirement_site_sign")
                if(project.Safety_requirement.site_sign)
                  each val in forms.option4
                    if(val.includes(project.Safety_requirement.site_sign))
                      option(value=(val === 'Yes' || val === 'yes' ? 'true' : 'false') selected) #{val}
                    else
                        option(value=(val === 'Yes' || val === 'yes'  ? 'true' : 'false')) #{val}
                else
                    option(value="none" selected disabled hidden) Select an Option
                    each val in forms.option4
                        option(value=(val === 'Yes' || val === 'yes'  ? 'true' : 'false')) #{val}
          .col.col-md-12.col-lg-6
            label.small(for="safetyRequirement_security_fencing") Security Fencing
            .input-group
              select.form-control(name="safetyRequirement_security_fencing")
                if(project.Safety_requirement.security_fencing)
                  each val in forms.option5
                    if(val.includes(project.Safety_requirement.security_fencing))
                      option(value=val selected) #{val}
                    else
                      option(value=val) #{val}
                else
                  option(value="none" selected disabled hidden) Select an Option
                  each val in forms.option5
                    option(value=val) #{val}
        div.form-group.form-row
          .col.col-md-12.col-lg-6
            label.small(for="safetyRequirement_fall_in_protection") Fall in Protection
            .input-group
              select.form-control(name="safetyRequirement_fall_in_protection")
                if(project.Safety_requirement.fall_in_protection)
                  each val in forms.option27
                    if(val.includes(project.Safety_requirement.fall_in_protection))
                      option(value=val selected) #{val}
                    else
                      option(value=val) #{val}
                else
                    option(value="none" selected disabled hidden) Select an Option
                    each val in forms.option27
                      option(value=val) #{val}
          .col.col-md-12.col-lg-6
            label.small(for="safetyRequirement_crossing_protection") Crossing Protection
            .input-group
              select.form-control(name="safetyRequirement_crossing_protection")
                if(project.Safety_requirement.crossing_protection)
                  each val in forms.option4
                    if(val.includes(project.Safety_requirement.crossing_protection))
                      option(value=(val === 'Yes' || val === 'yes' ? 'true' : 'false') selected) #{val}
                    else
                      option(value=(val === 'Yes' || val === 'yes'  ? 'true' : 'false')) #{val}
                else
                    option(value="none" selected disabled hidden) Select an Option
                    each val in forms.option4
                      option(value=(val === 'Yes' || val === 'yes'  ? 'true' : 'false')) #{val}