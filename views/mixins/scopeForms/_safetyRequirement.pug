mixin safetyRequirement()
  .col-lg-6
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        h6.m-0.font-weight-bold.text-primary Safety Requirements
        .dropdown.no-arrow
          a#dropdownMenuLink.dropdown-toggle(href="#safetyRequirement" data-toggle="collapse" role="button" aria-expanded="true")
            i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
      .card-body.collapse#safetyRequirement
        div.form-group.form-row
          .col.col-md-12.col-lg-6
            label.small(for="site-sign") Site Sign
            .input-group
              select.form-control(name="site-sign")
          .col.col-md-12.col-lg-6
            label.small(for='security-fencing') Security Fencing
            .input-group
              select.form-control(name="security-fencing")
        div.form-group.form-row
          .col.col-md-12.col-lg-6
            label.small(for='fall-in-protection') Fall in Protection
            .input-group
              select.form-control(name="fall-in-protection")
          .col.col-md-12.col-lg-6
            label.small(for='project-management') Crossing Protection
            .input-group
              select.form-control(name="project-management")