mixin allowanceAndInsurance()
  .col-lg-6
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        h6.m-0.font-weight-bold.text-primary Allowances and Insurances
        .dropdown.no-arrow
          a#dropdownMenuLink.dropdown-toggle(href="#allowanceAndInsurance" data-toggle="collapse" role="button" aria-expanded="true")
            i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
      .card-body.collapse#allowanceAndInsurance
        div.form-group.form-row
          .col.col-md-12.col-lg-6
            label.small(for="estimated_project_duration") Estimated Project Duration
            .input-group
              input.form-control(type="number" name="estimated_project_duration" value=`${project.Allowance_and_insurance.estimated_project_duration}`)
              .input-group-append
                span.input-group-text weeks
          .col.col-md-12.col-lg-6
            label.small(for='all-risk-insurance') All Risk Insurance
            .input-group
              select.form-control(name="all-risk-insurance")
                if(project.Allowance_and_insurance.risk_insurance)
                  each val in forms.option4
                    if(val.includes(project.Allowance_and_insurance.risk_insurance))
                      option(value=val selected) #{val}
                    else
                      option(value=val) #{val}
                else
                  option(value="none" selected disabled hidden) Select an Option
                  each val in forms.option4
                    option(value=val) #{val}
        .form-group.form-row
          .col.col-md-12.col-lg-12
            label.small(for='all-risk-insurance') Building Guarantee
            .input-group
              select.form-control(name="all-risk-insurance")
                if(project.Allowance_and_insurance.building_guarantee)
                  each val in forms.option6
                    if(val.includes(project.Safety_requirement.building_guarantee))
                      option(value=val selected) #{val}
                    else
                      option(value=val) #{val}
                else
                  option(value="none" selected disabled hidden) Select an Option
                  each val in forms.option6
                    option(value=val) #{val}
              