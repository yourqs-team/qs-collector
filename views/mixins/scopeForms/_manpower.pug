mixin manpower()
  .col-lg-6
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        h6.m-0.font-weight-bold.text-primary People and Pricing
        .dropdown.no-arrow
          a#dropdownMenuLink.dropdown-toggle(href="#manpower" data-toggle="collapse" role="button" aria-expanded="true")
            i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
      .card-body.collapse#manpower
        div.form-group.form-row
          .col
            label.small(for='markup') Markup
            .input-group
              .input-group-prepend
                span.input-group-text Plus
              input.form-control(type="number" name="markup")
              .input-group-append
                span.input-group-text %
        div.form-group.form-row
          .col.col-md-12.col-lg-6
            label.small(for="number-of-builders") # of Builders
            .input-group
              input.form-control(type="number" name="number-of-builders")
              .input-group-append
                span.input-group-text People
          .col.col-md-12.col-lg-6
            label.small(for='supervision') Supervision
            .input-group
              input.form-control(type="number" name="supervision")
              .input-group-append
                span.input-group-text Hrs/Week
        div.form-group.form-row
          .col.col-md-12.col-lg-6
            label.small(for='administration') Administration
            .input-group
              input.form-control(type="number" name="administration")
              .input-group-append
                span.input-group-text Hrs/Week
          .col.col-md-12.col-lg-6
            label.small(for='project-management') Project Management
            .input-group
              input.form-control(type="number" name="project-management")
              .input-group-append
                span.input-group-text Hrs/Week
        div.form-group.form-row
          .col.col-md-12.col-lg-6
            label.small(for='travel-distance') Travel Distance
            .input-group
              input.form-control(type="number" name="travel-distance")
              .input-group-append
                span.input-group-text km
          .col.col-md-12.col-lg-6
            label.small(for='travel-distance-price') Travel Distance - Price
            .input-group
              .input-group-prepend
                span.input-group-text $
              input.form-control(type="number" name="travel-distance-price")
              .input-group-append
                span.input-group-text Week
        .form-group.form-row
          .col
            label.small(for='travel-distance-price') Week Price
            input.form-control(type="number" name="travel-distance-price")
