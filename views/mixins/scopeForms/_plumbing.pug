mixin plumbing()
  .col-lg-6
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        h6.m-0.font-weight-bold.text-primary Plumbing
        .dropdown.no-arrow
          a#dropdownMenuLink.dropdown-toggle(href="#plumbing" data-toggle="collapse" role="button" aria-expanded="true")
            i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
      .card-body.collapse#plumbing
        div.form-group.form-row
          .col.col-lg-6
            label.small(for="plumbing_allowance_type") Allowance Type
            .input-group
              select.form-control(name="plumbing_allowance_type")
                if(project.Plumbing.allowance_type)
                  each val in forms.option9
                    if(val.includes(project.Plumbing.allowance_type))
                      option(value=val selected) #{val}
                    else
                      option(value=val) #{val}
                else
                  option(value="none" selected disabled hidden) Select an Option
                  each val in forms.option9 
                    option(value=val) #{val}
          .col.col-lg-6
            label.small(for='plumbing_HWC') HWC
            .input-group
              select.form-control(name="plumbing_HWC")
                if(project.Plumbing.HWC)
                  each val in forms.option13
                    if(val.includes(project.Plumbing.HWC))
                      option(value=val selected) #{val}
                    else
                      option(value=val) #{val}
                else
                  option(value="none" selected disabled hidden) Select an Option
                  each val in forms.option13
                    option(value=val) #{val}
        div.form-group.form-row
          .col.col-lg-6
            label.small(for="plumbing_new_connection") New Connection?
            .input-group
              select.form-control(name="plumbing_new_connection")
                if(project.Plumbing.newConnectionToYesNo())
                  each val in forms.option4
                    if(val.includes(project.Plumbing.newConnectionToYesNo()))
                      option(value=(val === 'Yes' || val === 'yes' ? 'true' : 'false') selected) #{val}
                    else
                        option(value=(val === 'Yes' || val === 'yes'  ? 'true' : 'false')) #{val}
                else
                    option(value="none" selected disabled hidden) Select an Option
                    each val in forms.option4
                        option(value=(val === 'Yes' || val === 'yes'  ? 'true' : 'false')) #{val}
        .div.form-group.form-row
          .col
            label.small(for="plumbing_comment") Comment
            .input-group
              textarea.form-control#comment(name="plumbing_comment") #{project.Plumbing.comments}
