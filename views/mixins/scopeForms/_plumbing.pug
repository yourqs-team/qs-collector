mixin plumbing()
    .col-lg-6
        .card.shadow.mb-4
            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                h6.m-0.font-weight-bold.text-primary Plumbing
                .dropdown.no-arrow
                    a#dropdownMenuLink.dropdown-toggle(href="#plumbing" data-toggle="collapse" role="button" aria-expanded="true")
                        i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
            .card-body.collapse#plumbing
                div.form-group.form-row
                    .col.col-lg-6
                        label.small(for="plans") Allowance Type
                        .input-group
                            select.form-control(name="plans")
                                if(project.Plumbing.allowance_type)
                                    each val in forms.option9
                                        if(val.includes(project.Plumbing.allowance_type))
                                            option(value=val selected) #{val}
                                        else
                                            option(value=val) #{val}
                                else
                                    option(value="none" selected disabled hidden) Select an Option
                                    each val in forms.option9 
                                        option(value=val) #{val}
                    .col.col-lg-6
                        label.small(for='geotechnical') HWC
                        .input-group
                            select.form-control(name="geotechnical")
                                if(project.Plumbing.HWC)
                                    each val in forms.option13
                                        if(val.includes(project.Plumbing.HWC))
                                            option(value=val selected) #{val}
                                        else
                                            option(value=val) #{val}
                                else
                                    option(value="none" selected disabled hidden) Select an Option
                                    each val in forms.option13
                                        option(value=val) #{val}
                div.form-group.form-row
                    .col.col-lg-6
                        label.small(for='geotechnical') New Connection?
                        .input-group
                            select.form-control(name="geotechnical")
                                if(project.Plumbing.new_connection)
                                    each val in forms.option4
                                        if(val.includes(project.Plumbing.new_connection))
                                            option(value=val selected) #{val}
                                        else
                                            option(value=val) #{val}
                                else
                                    option(value="none" selected disabled hidden) Select an Option
                                    each val in forms.option4
                                        option(value=val) #{val}
                .div.form-group.form-row
                    .col
                        label.small(for="comment") Comment
                        .input-group
                            textarea.form-control#comment
