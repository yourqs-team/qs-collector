mixin interior()
    .col-lg-12
        .flex
            h4.m-0.font-weight-bold.text-primary Interior
            .btn-group.btn-group-toggle(data-toggle='buttons')
            label.btn.btn-secondary.active
                input#option1(type='radio', name='options', autocomplete='off', checked='')
                |  Active
            label.btn.btn-secondary
                input#option2(type='radio', name='options', autocomplete='off')
                |  Radio
            hr
    .col-lg-6
        .card.shadow.mb-4
            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                h6.m-0.font-weight-bold.text-primary Interior
                .dropdown.no-arrow
                     a#dropdownMenuLink.dropdown-toggle(href="#interior" data-toggle="collapse" role="button" aria-expanded="true")
                         i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
            .card-body.collapse#interior
                .form-group.form-row
                .col.col-md-12.col-lg-12
                    label.small(for='temporary-power') Interior Scope
                    .input-group
                    select.form-control(name="temporary-power")