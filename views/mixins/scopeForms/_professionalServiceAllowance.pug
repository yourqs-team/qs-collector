mixin professionalServiceAllowance()
  .col-lg-6
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        h6.m-0.font-weight-bold.text-primary Professional Service Allowances
        .dropdown.no-arrow
          a#dropdownMenuLink.dropdown-toggle(href="#professionalServiceAllowance" data-toggle="collapse" role="button" aria-expanded="true")
            i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
      .card-body.collapse#professionalServiceAllowance
        div.form-group.form-row
          .col.col-md-12.col-lg-6
            label.small(for="plans") Plans
            .input-group
              .input-group-prepend
                span.input-group-text $
              input.form-control(name="plans" value=`${project.Proffesional_service_allowance.plans}`)
          .col.col-md-12.col-lg-6
            label.small(for='geotechnical') Geotechnical
            .input-group
              .input-group-prepend
                span.input-group-text $
              input.form-control(name="geotechnical"  value=`${project.Proffesional_service_allowance.geotechnical}`)
        div.form-group.form-row
          .col.col-md-12.col-lg-6
            label.small(for="engineer") Engineer
            .input-group
              .input-group-prepend
                span.input-group-text $
              input.form-control(name="engineer"  value=`${project.Proffesional_service_allowance.engineer}`)
          .col.col-md-12.col-lg-6
            label.small(for='surveyor') Surveyor
            .input-group
              .input-group-prepend
                span.input-group-text $
              input.form-control(name="surveyor"  value=`${project.Proffesional_service_allowance.surveyor}`)
        div.form-group.form-row
          .col.col-md-12.col-lg-6
            label.small(for="council_fees") Council Fees
            .input-group
              .input-group-prepend
                span.input-group-text $
              input.form-control(name="council_fees"  value=`${project.Proffesional_service_allowance.council_fees}`)
        div.form-group.form-row
          .col
              label.small(for="site-sign") Other Area
              .input-group
                  input.form-control(name="site-sign"  value=`${project.Proffesional_service_allowance.other_area}`) 