mixin joineryAllowance()
    .col-lg-6
        .card.shadow.mb-4
            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                h6.m-0.font-weight-bold.text-primary Joinery Allowances
                .dropdown.no-arrow
                    a#dropdownMenuLink.dropdown-toggle(href="#joineryAllowance" data-toggle="collapse" role="button" aria-expanded="true")
                        i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
            .card-body.collapse#joineryAllowance
                div.form-group.form-row
                    .col.col-md-12.col-lg-6
                        label.small(for="kitchen") Kitchen
                        .input-group
                            .input-group-prepend
                                span.input-group-text $
                            input.form-control(name="kitchen" value=`${project.Joinery_allowance.kitchen}`)
                    .col.col-md-12.col-lg-6
                        label.small(for='laundry') Laundry
                        .input-group
                            .input-group-prepend
                                span.input-group-text $
                            input.form-control(name="laundry" value=`${project.Joinery_allowance.laundry}`)
                div.form-group.form-row
                    .col.col-md-12.col-lg-6
                        label.small(for="wardrobe_master_bed") Wardrobe Master Bed
                        .input-group
                            .input-group-prepend
                                span.input-group-text $
                            input.form-control(name="wardrobe_master_bed" value=`${project.Joinery_allowance.wardrobe_master_bed}`)
                    .col.col-md-12.col-lg-6
                        label.small(for='wardrobes_other') Wardrobes Other
                        .input-group
                            .input-group-prepend
                                span.input-group-text $
                            input.form-control(name="wardrobes_other" value=`${project.Joinery_allowance.wardrobes_other}`)
                div.form-group.form-row
                    .col
                        label.small(for="joinery_allowance_other") Other
                        .input-group
                            input.form-control(name="joinery_allowance_other" value=`${project.Joinery_allowance.other}`) 