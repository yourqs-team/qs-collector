mixin joineryAllowance()
    .col-lg-6
        .card.shadow.mb-4
            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                h6.m-0.font-weight-bold.text-primary Joinery Allowances
                .dropdown.no-arrow
                    a#dropdownMenuLink.dropdown-toggle(href="#joineryAllowance" data-toggle="collapse" role="button" aria-expanded="true")
                        i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
            .card-body.collapse#joineryAllowance
                div.form-group.form-row
                    .col.col-md-12.col-lg-6
                        label.small(for="joineryAllowance_kitchen") Kitchen
                        .input-group
                            .input-group-prepend
                                span.input-group-text $
                            input.form-control(type="number" step=".01" name="joineryAllowance_kitchen" value=`${project.Joinery_allowance.kitchen}`)
                    .col.col-md-12.col-lg-6
                        label.small(for='joineryAllowance_laundry') Laundry
                        .input-group
                            .input-group-prepend
                                span.input-group-text $
                            input.form-control(type="number" step=".01" name="joineryAllowance_laundry" value=`${project.Joinery_allowance.laundry}`)
                div.form-group.form-row
                    .col
                        label.small(for="joineryAllowance_wardrobe_master_bed") Wardrobe Master Bed
                        .input-group
                            .input-group-prepend
                                span.input-group-text $
                            input.form-control(type="number" step=".01" name="joineryAllowance_wardrobe_master_bed" value=`${project.Joinery_allowance.wardrobe_master_bed}`)
                div.form-group.form-row
                    .col.col-md-12.col-lg-6
                        label.small(for='joineryAllowance_wardrobes_other') Wardrobes Other
                        .input-group
                            input.form-control(type="text" name="joineryAllowance_wardrobes_other" value=(project.Joinery_allowance.wardrobes_other == "null" ? '' : project.Joinery_allowance.wardrobes_other))
                    .col.col-md-12.col-lg-6
                        label.small(for='joineryAllowance_wardrobes_other') Wardrobes Other - Amount
                        .input-group
                            .input-group-prepend
                                span.input-group-text $
                            input.form-control(type="number" step=".01" name="joineryAllowance_wardrobe_other_amount" value=`${project.Joinery_allowance.wardrobe_other_amount}`)
                div.form-group.form-row
                    .col.col-md-12.col-lg-6
                        label.small(for="joineryAllowance_other") Other
                        .input-group
                            input.form-control(type="text" name="joineryAllowance_other" value=(project.Joinery_allowance.other == "null" ? '' : project.Joinery_allowance.other)) 
                    .col.col-md-12.col-lg-6
                        label.small(for="joineryAllowance_other_amount") Other Amount
                        .input-group
                            .input-group-prepend
                                span.input-group-text $
                            input.form-control(type="number" step=".01" name="joineryAllowance_other_amount" value=`${project.Joinery_allowance.other_amount}`) 