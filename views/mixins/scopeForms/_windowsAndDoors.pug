mixin windowsAndDoors()
    .col-lg-6
        .card.shadow.mb-4
            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                h6.m-0.font-weight-bold.text-primary Windows and Doors
                .dropdown.no-arrow
                    a#dropdownMenuLink.dropdown-toggle(href="#windowsAndDoors" data-toggle="collapse" role="button" aria-expanded="true")
                        i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
            .card-body.collapse#windowsAndDoors
                .form-group.form-row
                    .col.col-md-12.col-lg-12
                        label.small(for="windowAndDoor_interior_door_type") Interior Door Type
                        .input-group
                            select.form-control(name="windowAndDoor_interior_door_type")
                                if(project.Window_and_door.interior_door_type)
                                    each val in forms.option8
                                        if(val.includes(project.Window_and_door.interior_door_type))
                                            option(value=val selected) #{val}
                                        else
                                            option(value=val) #{val}
                                else
                                    option(value="none" selected disabled hidden) Select an Option
                                    each val in forms.option8
                                        option(value=val) #{val}
                .form-group.form-row
                    .col.col-md-12.col-lg-12
                        label.small(for="windowAndDoor_door_hardware") Door Hardware
                        .input-group
                            select.form-control(name="windowAndDoor_door_hardware")
                                if(project.Window_and_door.door_hardware)
                                    each val in forms.option9
                                        if(val.includes(project.Window_and_door.door_hardware))
                                            option(value=val selected) #{val}
                                        else
                                            option(value=val) #{val}
                                else
                                    option(value="none" selected disabled hidden) Select an Option
                                    each val in forms.option9
                                        option(value=val) #{val}