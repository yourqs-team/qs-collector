mixin windowsAndDoors()
    .col-lg-6
        .card.shadow.mb-4
            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                h6.m-0.font-weight-bold.text-primary Windows and Doors
                .dropdown.no-arrow
                    a#dropdownMenuLink.dropdown-toggle(href="#windowsAndDoors" data-toggle="collapse" role="button" aria-expanded="true")
                        i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
            .card-body.collapse#windowsAndDoors
                .form-group.form-row
                    .col.col-md-12.col-lg-12
                        label.small(for='interior-door-type') Interior Door Type
                        .input-group
                            select.form-control(name="temporary-power")
                .form-group.form-row
                    .col.col-md-12.col-lg-12
                        label.small(for='door-hardware') Door Hardware
                        .input-group
                            select.form-control(name="temporary-water")