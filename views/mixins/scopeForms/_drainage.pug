mixin drainage()
  .col-lg-6
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        h6.m-0.font-weight-bold.text-primary Drainage
        .dropdown.no-arrow
          a#dropdownMenuLink.dropdown-toggle(href="#drainage" data-toggle="collapse" role="button" aria-expanded="true")
            i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
      .card-body.collapse#drainage
        div.form-group.form-row
          label.small(for='drainage_new_connection') New Connection?
            .input-group
              select.form-control(name="drainage_new_connection")
                if(project.Drainage.new_connections)
                  each val in forms.option4
                    if(val.includes(project.Drainage.new_connections))
                      option(value=(val === 'Yes' || val === 'yes' ? 'true' : 'false') selected) #{val}
                    else
                        option(value=(val === 'Yes' || val === 'yes'  ? 'true' : 'false')) #{val}
                else
                    option(value="none" selected disabled hidden) Select an Option
                    each val in forms.option4
                        option(value=(val === 'Yes' || val === 'yes'  ? 'true' : 'false')) #{val}
        .div.form-group.form-row
          .col
            label.small(for="drainage_comment") Comment
            .input-group
              textarea.form-control#comment(name="drainage_comment") #{project.Drainage.comments}