mixin drainage()
    .col-lg-6
        .card.shadow.mb-4
            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                h6.m-0.font-weight-bold.text-primary Drainage
                .dropdown.no-arrow
                    a#dropdownMenuLink.dropdown-toggle(href="#drainage" data-toggle="collapse" role="button" aria-expanded="true")
                        i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
            .card-body.collapse#drainage
                div.form-group.form-row
                    h6.m-3.font-weight-bold.text-dark New Connection?
                    div.form-check.form-check-inline
                        input.form-check-input(type='radio' name="yes" id="yes" value="yes")
                        label.small.form-check-label(for="newConnection") Yes
                    div.form-check.form-check-inline
                        input.form-check-input(type='radio' name="yes" id="yes" value="yes")
                        label.small.form-check-label(for="newConnection") No
                .div.form-group.form-row
                    .col
                        label.small(for="comment") Comment
                        .input-group
                            textarea.form-control#comment