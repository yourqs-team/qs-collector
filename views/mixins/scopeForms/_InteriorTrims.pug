mixin interiorTrims()
    .col-lg-6
        .card.shadow.mb-4
            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                h6.m-0.font-weight-bold.text-primary Interior Trims
                .dropdown.no-arrow
                     a#dropdownMenuLink.dropdown-toggle(href="#interior" data-toggle="collapse" role="button" aria-expanded="true")
                         i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
            .card-body.collapse#interior
                div.form-group.form-row
                    .col.col-md-12.col-lg-6
                        label.small(for="engineer") Engineer
                        .input-group
                            input.form-control(name="engineer")
                    .col.col-md-12.col-lg-6
                        label.small(for='surveyor') Surveyor
                        .input-group
                            input.form-control(name="surveyor")
