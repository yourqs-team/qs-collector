mixin temporaryService()
  .col-lg-6
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        h6.m-0.font-weight-bold.text-primary Temporary Services
        .dropdown.no-arrow
          a#dropdownMenuLink.dropdown-toggle(href="#temporaryService" data-toggle="collapse" role="button" aria-expanded="true")
            i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
      .card-body.collapse#temporaryService
        .form-group.form-row
          .col.col-md-12.col-lg-12
            label.small(for='temporary-power') Temporary Power
            .input-group
              select.form-control(name="temporary-power")
        .form-group.form-row
          .col.col-md-12.col-lg-12
            label.small(for='temporary-water') Temporary Water
            .input-group
              select.form-control(name="temporary-water")
        .form-group.form-row
          .col.col-md-12.col-lg-12
            label.small(for='site-shed') Site Shed
            .input-group
              select.form-control(name="site-shed")