mixin temporaryService()
  .col-lg-6
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        h6.m-0.font-weight-bold.text-primary Temporary Services
        .dropdown.no-arrow
          a#dropdownMenuLink.dropdown-toggle(href="#temporaryService" data-toggle="collapse" role="button" aria-expanded="true")
            i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
      .card-body.collapse#temporaryService
        .form-group.form-row
          .col.col-md-12.col-lg-12
            label.small(for="tempService_temporary_power") Temporary Power
            .input-group
              select.form-control(name="tempService_temporary_power")
                if(project.Temporary_service.temporary_power)
                  each val in forms.option4
                    if(val.includes(project.Temporary_service.temporary_power))
                      option(value=(val === 'Yes' || val === 'yes' ? 'true' : 'false') selected) #{val}
                    else
                        option(value=(val === 'Yes' || val === 'yes'  ? 'true' : 'false')) #{val}
                else
                    option(value="none" selected disabled hidden) Select an Option
                    each val in forms.option4
                        option(value=(val === 'Yes' || val === 'yes'  ? 'true' : 'false')) #{val}
        .form-group.form-row
          .col.col-md-12.col-lg-12
            label.small(for="tempService_temporary_water") Temporary Water
            .input-group
              select.form-control(name="tempService_temporary_water")
                if(project.Temporary_service.temporary_water)
                  each val in forms.option4
                    if(val.includes(project.Temporary_service.temporary_water))
                      option(value=(val === 'Yes' || val === 'yes' ? 'true' : 'false') selected) #{val}
                    else
                        option(value=(val === 'Yes' || val === 'yes'  ? 'true' : 'false')) #{val}
                else
                    option(value="none" selected disabled hidden) Select an Option
                    each val in forms.option4
                        option(value=(val === 'Yes' || val === 'yes'  ? 'true' : 'false')) #{val}
        .form-group.form-row
          .col.col-md-12.col-lg-12
            label.small(for="tempService_site_shed") Site Shed
            .input-group
              select.form-control(name="tempService_site_shed")
                if(project.Temporary_service.site_shed)
                  each val in forms.option7
                    if(val.includes(project.Temporary_service.site_shed))
                      option(value=val selected) #{val}
                    else
                      option(value=val) #{val}
                else
                  option(value="none" selected disabled hidden) Select an Option
                  each val in forms.option7
                    option(value=val) #{val}