// Sidebar
ul#accordionSidebar.navbar-nav.bg-gradient-primary.sidebar.sidebar-dark.accordion
  // Sidebar - Brand
  a.sidebar-brand.d-flex.align-items-center.justify-content-center(href='/')
    .sidebar-brand-text.mx-3
      img.img-fluid.logoNavbar(src="/img/logo-white.png", alt="YourQS | QS Collector")
  // Divider
  hr.sidebar-divider
  // Heading
  .sidebar-heading
    | Main Menu
  // Nav Item - Pages Collapse Menu
  li(class=title=='Project Dashboard'?'nav-item active':'nav-item')
    a.nav-link.collapsed(href='/projects' aria-expanded='true')
      i.fas.fa-fw.fa-folder
      span Projects
  li(class=title=='Submitted Projects'?'nav-item active':'nav-item')
    a.nav-link.collapsed(href='/projects/submitted' aria-expanded='true')
      i.fas.fa-fw.fa-paper-plane
      span Submitted
  li(class=title=='In-Progress Projects'?'nav-item active':'nav-item')
    a.nav-link.collapsed(href='/projects/in-progress' aria-expanded='true')
      i.fas.fa-fw.fa-folder-open
      span In Progress
