doctype html

html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='author' content='')
    title= `${title} | ${h.siteName}`

    link(href='dist/style.css' rel='stylesheet')

    //- Modular CSS comes here.
    block stylesheet

    script(src="js/modules/jquery/jquery-3.2.1.js" type="text/javascript")
    script(src="js/modules/bootstrap/bootstrap.js" type="text/javascript")

    //- Modular Javascript comes here.
    block javascript

  body.main.bg-gradient-primary
    nav.navbar.navbar-expand.navbar-light.bg-white.topbar.mb-4.static-top.shadow
      .container
        //- Logo Brand
        a.navbar-brand.js-scroll-trigger(href='#page-top')
          img.logoNavbar(src="img/logo.png", alt="")

        //- Nav Toggler
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarResponsive' aria-controls='navbarResponsive' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon

        //- Nav
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='/register' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                span.mr-2.d-none.d-lg-inline.text-gray-600.small Create an Account
            li.nav-item
              a.btn.btn-primary.btn-user(href='/login' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                span.d-none.d-lg-inline.small Login
  
  block content

